<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ayc.coleccionistas.perfil">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="42dp"
        android:src="@drawable/usuario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewNOmbre"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Brow_AC_Bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/button2"
        android:layout_marginTop="17dp"
        android:background="@drawable/btn"
        android:textColor="@color/Brown_AC"
        android:width="90dp"
        android:onClick="agregarP"
        android:layout_below="@+id/textViewNOmbre"
        android:layout_alignEnd="@+id/gridPerfil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ColecciÃ³n"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentStart="true"
        android:textColor="@color/Brown_AC" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridPerfil"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textViewNOmbre"
        android:layout_marginTop="31dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
