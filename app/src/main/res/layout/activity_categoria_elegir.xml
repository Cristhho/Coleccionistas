<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ayc.coleccionistas.CategoriaElegir">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imagecarro"
        android:layout_marginTop="126dp"
        android:src="@drawable/carro"
        android:onClick="carro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView4"
        android:onClick="comics"
        android:src="@drawable/comic"
        android:layout_alignTop="@+id/imagecarro"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView5"
        android:src="@drawable/pintura"
        android:onClick="pintura"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView6"
        android:src="@drawable/game"
        android:onClick="juegos"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imagecarro"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView7"
        android:src="@drawable/monedas"
        android:onClick="monedas"
        android:contentDescription=""
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView8"
        android:src="@drawable/otros"
       android:onClick="otros"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categorias"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Brown_AC" />

</RelativeLayout>
